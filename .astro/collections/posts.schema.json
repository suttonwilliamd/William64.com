{
  "$ref": "#/definitions/posts",
  "definitions": {
    "posts": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "publishedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "summary": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "Technical Tutorials",
            "Industry Insights",
            "Case Studies",
            "Retro Tech"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "publishedDate",
        "summary",
        "category",
        "tags"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}