---// @ts-nocheck
import clients from '../data/clients.json';
---

<section class="client-logos-section">
  <div class="container">
    <h3 class="subsection-heading">Companies I've Worked With</h3>
    
    <div class="client-logos-grid">
      {clients.map(client => (
        <a href={client.url} class="client-logo-card" target="_blank" rel="noopener noreferrer">
          <div class="client-logo-content">
            <div class="client-logo-placeholder">
              <span class="client-logo-text">{client.name.split(' ').map(word => word[0]).join('')}</span>
            </div>
            <p class="client-name">{client.name}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .client-logos-section {
    padding: var(--space-xl) 0;
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.03) 0%, rgba(10, 10, 26, 0) 100%);
  }

  .client-logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--space-lg);
    align-items: center;
  }

  .client-logo-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-md);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
    text-decoration: none;
    height: 120px;
  }

  .client-logo-card:hover {
    border-color: var(--color-secondary);
    background: var(--color-surface-hover);
    transform: translateY(-4px);
    box-shadow: 0 0 15px rgba(255, 107, 157, 0.1);
  }

  .client-logo-placeholder {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-sm);
    font-weight: var(--font-weight-bold);
    color: var(--color-background);
    font-size: var(--font-size-lg);
  }

  .client-name {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-align: center;
    font-weight: var(--font-weight-medium);
    transition: color 0.3s ease;
  }

  .client-logo-card:hover .client-name {
    color: var(--color-text);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .client-logos-grid {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: var(--space-md);
    }

    .client-logo-card {
      height: 100px;
      padding: var(--space-sm);
    }

    .client-logo-placeholder {
      width: 40px;
      height: 40px;
      font-size: var(--font-size-base);
    }
  }
</style>