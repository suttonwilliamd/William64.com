---
const navItems = [
  { name: 'Home', path: '/' },
  { name: 'Blog', path: '/blog' },
  { name: 'Projects', path: '/projects' },
  { name: 'About', path: '/about' },
  { name: 'Contact', path: '/about#contact' }
];

const currentPath = Astro.url.pathname;
---

<nav class="navbar">
  <ul class="nav-links">
    {navItems.map(item => (
      <li>
        <a
          href={item.path}
          class={`nav-link ${currentPath === item.path ? 'active' : ''}`}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>
</nav>
