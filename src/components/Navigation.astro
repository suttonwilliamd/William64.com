---
const navItems = [
  { name: 'Home', path: '/', icon: 'üè†' },
  { name: 'Projects', path: '/projects', icon: '‚ö°' },
  { name: 'Blog', path: '/blog', icon: 'üìù' },
  { name: 'About', path: '/about', icon: 'üë§' },
  { name: 'Aaron', path: '/aaron', icon: 'ü´†' }
];

const currentPath = Astro.url.pathname;
---

<nav class="nav">
  <a href="/" class="logo-link">
    <span class="logo-gradient">William64</span><span class="logo-dot">.com</span>
  </a>
  {navItems.map(item => (
    <a
      href={item.path}
      class={`nav-link ${currentPath === item.path || (item.path !== '/' && currentPath.startsWith(item.path)) ? 'active' : ''}`}
    >
      <span class="nav-icon">{item.icon}</span>
      <span class="nav-text">{item.name}</span>
    </a>
  ))}
  <a href="mailto:suttonwilliamd@gmail.com" class="btn btn-primary nav-cta">Get in Touch</a>
</nav>

<style>
  .nav {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    margin-right: var(--space-2);
  }

  .logo-gradient {
    background: linear-gradient(135deg, #00d4aa 0%, #7c3aed 50%, #db2777 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
  }

  .logo-dot {
    color: var(--color-text);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    text-decoration: none;
  }

  .nav-icon {
    font-size: var(--font-size-base);
    line-height: 1;
  }

  .nav-text {
    font-weight: var(--font-weight-medium);
  }

  .nav-link:hover {
    color: var(--color-text);
    background: var(--color-surface);
  }

  .nav-link.active {
    color: var(--color-primary);
    background: rgba(0, 229, 160, 0.1);
  }

  .nav-cta {
    margin-left: auto;
    padding: var(--space-2) var(--space-4);
    font-size: var(--font-size-sm);
    border-radius: var(--radius-md);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .nav-icon {
      display: none;
    }

    .nav-link {
      padding: var(--space-2) var(--space-3);
    }
    
    .nav-cta {
      display: none;
    }
  }
</style>
