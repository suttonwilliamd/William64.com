---
import Footer from '../components/Footer.astro';

const pageTitle = "Projects | William Sutton - Software Engineer";
const pageDescription = "Portfolio of software projects, case studies, and technical solutions by William Sutton.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header class="header">
      <div class="header-inner">
        <a href="/" class="logo">
          <span class="logo-gradient">William64</span>
          <span>.com</span>
        </a>
        <nav class="nav">
          <a href="/" class="nav-link">Home</a>
          <a href="/projects" class="nav-link active">Projects</a>
          <a href="/blog" class="nav-link">Blog</a>
          <a href="/about" class="nav-link">About</a>
        </nav>
      </div>
    </header>

    <main id="main-content">
      <section class="section">
        <div class="container">
          <h1 class="hero-title">Projects</h1>
          <p class="hero-subtitle" style="margin-bottom: var(--space-12);">
            A collection of software projects, case studies, and technical solutions.
          </p>

          <div class="grid grid-2">
            <article class="project-card">
              <div class="project-header">
                <div style="display: flex; gap: var(--space-2);">
                  <div class="terminal-dot red"></div>
                  <div class="terminal-dot yellow"></div>
                  <div class="terminal-dot green"></div>
                </div>
                <span class="project-title">William64.com</span>
              </div>
              <div class="project-body">
                <h3 class="card-title">Modern Portfolio Platform</h3>
                <p class="project-description">
                  A sophisticated portfolio website showcasing advanced web development techniques, modern design systems, and optimal performance built with Astro.js.
                </p>
                <div class="project-tags">
                  <span class="tag">Astro.js</span>
                  <span class="tag">TypeScript</span>
                  <span class="tag">Tailwind CSS</span>
                  <span class="tag">React</span>
                </div>
              </div>
              <div class="project-footer">
                <a href="/" class="btn btn-primary">View Live</a>
                <a href="https://github.com/williamsutton" class="btn btn-secondary">Source Code</a>
              </div>
            </article>

            <article class="project-card">
              <div class="project-header">
                <div style="display: flex; gap: var(--space-2);">
                  <div class="terminal-dot red"></div>
                  <div class="terminal-dot yellow"></div>
                  <div class="terminal-dot green"></div>
                </div>
                <span class="project-title">Pebble + Rock</span>
              </div>
              <div class="project-body">
                <h3 class="card-title">Retro Gaming Platform</h3>
                <p class="project-description">
                  Modern web platform featuring classic pebble and rock games with sophisticated animations and responsive multiplayer functionality.
                </p>
                <div class="project-tags">
                  <span class="tag">React</span>
                  <span class="tag">WebGL</span>
                  <span class="tag">Socket.io</span>
                  <span class="tag">Animation</span>
                </div>
              </div>
              <div class="project-footer">
                <a href="https://pebble-rock.vercel.app" class="btn btn-primary">View Live</a>
                <a href="https://github.com/williamsutton/pebble-rock" class="btn btn-secondary">Source Code</a>
              </div>
            </article>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
