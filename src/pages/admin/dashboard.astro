---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Admin Dashboard - William64";
const description = "Blog management dashboard";
---

<BaseLayout {title} {description}>
  <div class="min-h-screen bg-black text-green-400">
    <!-- Header -->
    <header class="border-b border-green-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-6">
          <div>
            <h1 class="text-2xl font-bold">Admin Dashboard</h1>
            <p class="text-green-300">Manage your blog posts</p>
          </div>
          <div class="flex items-center space-x-4">
            <a href="/" class="text-green-400 hover:text-green-300">View Site</a>
            <button id="logoutBtn" class="text-red-400 hover:text-red-300">Logout</button>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Actions Bar -->
      <div class="mb-8 flex justify-between items-center">
        <h2 class="text-xl font-semibold">Blog Posts</h2>
        <button id="newPostBtn" class="bg-green-400 text-black px-4 py-2 rounded hover:bg-green-500">
          New Post
        </button>
      </div>

      <!-- Posts Table -->
      <div class="bg-gray-900 rounded-lg border border-green-700 overflow-hidden">
        <table class="min-w-full divide-y divide-green-700">
          <thead class="bg-gray-800">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-green-300 uppercase tracking-wider">
                Title
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-green-300 uppercase tracking-wider">
                Date
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-green-300 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-green-300 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody id="postsTableBody" class="bg-gray-900 divide-y divide-green-700">
            <!-- Posts will be loaded here -->
          </tbody>
        </table>
      </div>

      <!-- Loading State -->
      <div id="loadingState" class="text-center py-8">
        <div class="text-green-400">Loading posts...</div>
      </div>

      <!-- Empty State -->
      <div id="emptyState" class="hidden text-center py-12">
        <div class="text-green-300 mb-4">No posts found</div>
        <button id="createFirstPostBtn" class="bg-green-400 text-black px-4 py-2 rounded hover:bg-green-500">
          Create your first post
        </button>
      </div>
    </main>
  </div>

  <!-- Post Editor Modal -->
  <div id="postEditorModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
    <div class="bg-gray-900 border border-green-700 rounded-lg w-full max-w-4xl max-h-[90vh] overflow-hidden">
      <div class="flex justify-between items-center p-6 border-b border-green-700">
        <h3 id="modalTitle" class="text-lg font-semibold">Edit Post</h3>
        <button id="closeModalBtn" class="text-green-400 hover:text-green-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <div class="p-6 overflow-y-auto max-h-[calc(90vh-120px)]">
        <form id="postEditorForm" class="space-y-6">
          <input type="hidden" id="postId" name="id" />
          
          <div>
            <label for="postTitle" class="block text-sm font-medium text-green-300 mb-2">Title</label>
            <input
              type="text"
              id="postTitle"
              name="title"
              required
              class="w-full px-3 py-2 border border-green-700 bg-black text-green-400 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="Enter post title"
            />
          </div>
          
          <div>
            <label for="postSummary" class="block text-sm font-medium text-green-300 mb-2">Summary</label>
            <textarea
              id="postSummary"
              name="summary"
              rows="3"
              required
              class="w-full px-3 py-2 border border-green-700 bg-black text-green-400 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="Enter post summary"
            ></textarea>
          </div>
          
          <div>
            <label for="postDate" class="block text-sm font-medium text-green-300 mb-2">Publish Date</label>
            <input
              type="date"
              id="postDate"
              name="date"
              required
              class="w-full px-3 py-2 border border-green-700 bg-black text-green-400 rounded focus:outline-none focus:ring-2 focus:ring-green-500"
            />
          </div>
          
          <div>
            <label for="postContent" class="block text-sm font-medium text-green-300 mb-2">Content (Markdown)</label>
            <textarea
              id="postContent"
              name="content"
              rows="15"
              required
              class="w-full px-3 py-2 border border-green-700 bg-black text-green-400 rounded focus:outline-none focus:ring-2 focus:ring-green-500 font-mono text-sm"
              placeholder="Write your post content in Markdown..."
            ></textarea>
          </div>
          
          <div class="flex justify-end space-x-4">
            <button
              type="button"
              id="cancelEditBtn"
              class="px-4 py-2 border border-green-700 text-green-400 rounded hover:bg-gray-800"
            >
              Cancel
            </button>
            <button
              type="submit"
              id="savePostBtn"
              class="px-4 py-2 bg-green-400 text-black rounded hover:bg-green-500"
            >
              Save Post
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
    <div class="bg-gray-900 border border-green-700 rounded-lg p-6 max-w-md w-full">
      <h3 class="text-lg font-semibold text-green-400 mb-4">Delete Post</h3>
      <p class="text-green-300 mb-6">Are you sure you want to delete this post? This action cannot be undone.</p>
      <div class="flex justify-end space-x-4">
        <button
          id="cancelDeleteBtn"
          class="px-4 py-2 border border-green-700 text-green-400 rounded hover:bg-gray-800"
        >
          Cancel
        </button>
        <button
          id="confirmDeleteBtn"
          class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
        >
          Delete
        </button>
      </div>
    </div>
  </div>

  <script>
    // Check authentication
    const token = localStorage.getItem('adminToken');
    if (!token) {
      window.location.href = '/admin/login';
    }

    // Global state
    let posts = [];
    let currentPostId = null;

    // DOM elements
    const postsTableBody = document.getElementById('postsTableBody');
    const loadingState = document.getElementById('loadingState');
    const emptyState = document.getElementById('emptyState');
    const postEditorModal = document.getElementById('postEditorModal');
    const deleteModal = document.getElementById('deleteModal');
    const postEditorForm = document.getElementById('postEditorForm');

    // Load posts
    async function loadPosts() {
      try {
        const response = await fetch('/api/admin/posts', {
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });

        if (response.status === 401) {
          localStorage.removeItem('adminToken');
          window.location.href = '/admin/login';
          return;
        }

        posts = await response.json();
        renderPosts();
      } catch (error) {
        console.error('Error loading posts:', error);
        loadingState.innerHTML = '<div class="text-red-400">Error loading posts</div>';
      }
    }

    // Render posts table
    function renderPosts() {
      loadingState.classList.add('hidden');
      
      if (posts.length === 0) {
        emptyState.classList.remove('hidden');
        return;
      }

      emptyState.classList.add('hidden');
      postsTableBody.innerHTML = posts.map(post => `
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium text-green-400">${post.title}</div>
            <div class="text-sm text-green-300 truncate max-w-xs">${post.summary}</div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-green-300">
            ${new Date(post.date).toLocaleDateString()}
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
              Published
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
            <button onclick="editPost('${post.id}')" class="text-green-400 hover:text-green-300">Edit</button>
            <button onclick="deletePost('${post.id}')" class="text-red-400 hover:text-red-300">Delete</button>
          </td>
        </tr>
      `).join('');
    }

    // Edit post
    function editPost(postId) {
      const post = posts.find(p => p.id === postId);
      if (!post) return;

      currentPostId = postId;
      document.getElementById('modalTitle').textContent = 'Edit Post';
      document.getElementById('postId').value = post.id;
      document.getElementById('postTitle').value = post.title;
      document.getElementById('postSummary').value = post.summary;
      document.getElementById('postDate').value = post.date;
      document.getElementById('postContent').value = post.content || '';
      
      postEditorModal.classList.remove('hidden');
    }

    // Delete post
    function deletePost(postId) {
      currentPostId = postId;
      deleteModal.classList.remove('hidden');
    }

    // Save post
    async function savePost(formData) {
      try {
        const url = currentPostId ? `/api/admin/posts/${currentPostId}` : '/api/admin/posts';
        const method = currentPostId ? 'PUT' : 'POST';

        const response = await fetch(url, {
          method,
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify(formData)
        });

        if (response.status === 401) {
          localStorage.removeItem('adminToken');
          window.location.href = '/admin/login';
          return;
        }

        if (response.ok) {
          postEditorModal.classList.add('hidden');
          loadPosts();
        } else {
          const error = await response.json();
          alert('Error saving post: ' + (error.message || 'Unknown error'));
        }
      } catch (error) {
        console.error('Error saving post:', error);
        alert('Error saving post');
      }
    }

    // Delete post
    async function confirmDelete() {
      try {
        const response = await fetch(`/api/admin/posts/${currentPostId}`, {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });

        if (response.status === 401) {
          localStorage.removeItem('adminToken');
          window.location.href = '/admin/login';
          return;
        }

        if (response.ok) {
          deleteModal.classList.add('hidden');
          loadPosts();
        } else {
          const error = await response.json();
          alert('Error deleting post: ' + (error.message || 'Unknown error'));
        }
      } catch (error) {
        console.error('Error deleting post:', error);
        alert('Error deleting post');
      }
    }

    // Event listeners
    document.getElementById('logoutBtn').addEventListener('click', () => {
      localStorage.removeItem('adminToken');
      window.location.href = '/admin/login';
    });

    document.getElementById('newPostBtn').addEventListener('click', () => {
      currentPostId = null;
      document.getElementById('modalTitle').textContent = 'New Post';
      document.getElementById('postEditorForm').reset();
      document.getElementById('postDate').value = new Date().toISOString().split('T')[0];
      postEditorModal.classList.remove('hidden');
    });

    document.getElementById('createFirstPostBtn').addEventListener('click', () => {
      document.getElementById('newPostBtn').click();
    });

    document.getElementById('closeModalBtn').addEventListener('click', () => {
      postEditorModal.classList.add('hidden');
    });

    document.getElementById('cancelEditBtn').addEventListener('click', () => {
      postEditorModal.classList.add('hidden');
    });

    document.getElementById('postEditorForm').addEventListener('submit', (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());
      savePost(data);
    });

    document.getElementById('cancelDeleteBtn').addEventListener('click', () => {
      deleteModal.classList.add('hidden');
    });

    document.getElementById('confirmDeleteBtn').addEventListener('click', confirmDelete);

    // Make functions global for onclick handlers
    window.editPost = editPost;
    window.deletePost = deletePost;

    // Load posts on page load
    loadPosts();
  </script>
</BaseLayout>