---
import TokenViewer from "../components/TokenViewer.jsx";
import Footer from '../components/Footer.astro';
---
<html lang="en">
<div>
<header>
  <head>
    <meta charset="UTF-8" />
    <title>Token Viewer | William64.com</title>
    <meta name="description" content="Interactive token explorer for GPT-2 vocabulary." />
  </head>
</header>
  <body>
    <!-- Loading state while TokenViewer loads -->
    <div id="loading-state" style="
      min-height: 100vh;
      background: #111;
      color: limegreen;
      font-family: monospace;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    ">
      Loading Token Viewer...
    </div>
    
    <!-- TokenViewer with idle loading to reduce initial bundle impact -->
    <TokenViewer client:idle />
  </body>

<Footer />
</div>
</html>
