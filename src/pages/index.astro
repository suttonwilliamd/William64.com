    min-width: 120px;
    background: rgba(10, 10, 26, 0.5);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
  }
  
  .metric-card:hover {
    background: rgba(10, 10, 26, 0.7);
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }
  
  /* Featured case study styling */
  .featured-case-study {
    border: 2px solid var(--color-primary);
    background: linear-gradient(135deg, rgba(0, 229, 160, 0.05) 0%, rgba(10, 10, 26, 0) 100%);
    box-shadow: 0 0 20px rgba(0, 229, 160, 0.1);
  }
  
  .case-study-meta {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }
  
  /* Enhanced hero section */
  .cyberpunk-grid {
    background: linear-gradient(135deg, rgba(0, 229, 160, 0.03) 0%, rgba(255, 107, 157, 0.03) 50%, rgba(123, 104, 238, 0.03) 100%);
  }

  /* Client logo cards styling */
  .client-logo-card {
    transition: all 0.3s ease;
