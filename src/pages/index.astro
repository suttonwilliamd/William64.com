---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

const title = "William64 — Software Engineer";
const description = "Clean, minimal site for William Sutton: engineering, writing, and projects.";
---

<BaseLayout {title} {description}>
	<div class="w-full px-4 md:px-8">
		<header class="py-6">
			<Navigation />
		</header>

		<main>
			<section class="mb-12" aria-labelledby="hero-title">
				<h1 id="hero-title" class="text-3xl md:text-4xl mb-3">Hi, I'm William.</h1>
				<p class="text-green-300 mb-6" style="max-width:700px;">
					I build reliable software and write about systems, engineering craft, and projects.
				</p>
				<div class="flex gap-4 flex-wrap">
					<a href="/projects" class="project-link">View projects →</a>
					<a href="/blog" class="project-link">Read the blog →</a>
					<a href="/about" class="project-link">About me →</a>
				</div>
			</section>

			<section class="mb-12">
				<h2 class="text-2xl border-b border-green-700 pb-2 mb-4">Latest Posts</h2>
				<ul id="post-list" class="space-y-6">
					<!-- Injected by /main.js -->
				</ul>
			</section>

			<section class="mb-12">
				<h2 class="text-2xl border-b border-green-700 pb-2 mb-4">Projects</h2>
				<div class="space-y-6">
					<div>
						<h3 class="text-xl font-bold">tpc-server</h3>
						<p class="text-green-300" style="max-width:700px;">
							A Python MCP server for managing thoughts, plans, and changelogs with a structured database.
						</p>
					</div>
				</div>
			</section>

			<section>
				<h2 class="text-2xl border-b border-green-700 pb-2 mb-4">About Me</h2>
				<p class="mb-4" style="max-width:700px;">
					I'm a software engineer focused on clean systems and elegant solutions.
				</p>
			</section>
		</main>

		<Footer />
	</div>

	<script src="/main.js" defer></script>
</BaseLayout>