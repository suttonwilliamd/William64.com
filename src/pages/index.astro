---
import TerminalHero from "../components/TerminalHero.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "William Sutton - Hobbyist Developer";
const pageDescription = "Hobbyist developer passionate about coding, clean code, and continuous learning.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header class="header">
      <div class="header-inner">
        <a href="/" class="logo">
          <span class="logo-gradient">William64</span>
          <span>.com</span>
        </a>
        <nav class="nav">
          <a href="/" class="nav-link active">Home</a>
          <a href="/projects" class="nav-link">Projects</a>
          <a href="/blog" class="nav-link">Blog</a>
          <a href="/about" class="nav-link">About</a>
            <a href="mailto:suttonwilliamd@gmail.com" class="btn btn-primary" style="margin-left: var(--space-4);">
            Get in Touch
          </a>
        </nav>
      </div>
    </header>

    <main id="main-content">
      <!-- Hero Section -->
      <section class="hero">
        <div class="container">
          <h1 class="hero-title">
            <span class="text-gradient">William Sutton</span>
          </h1>
          <p class="hero-subtitle">
            Hobbyist developer passionate about clean code and continuous learning.
          </p>
          <div class="hero-actions">
            <a href="/projects" class="btn btn-primary">View Projects</a>
            <a href="/about" class="btn btn-secondary">Learn More</a>
          </div>

          <div class="metrics">
            <div class="metric">
              <div class="metric-value">10+</div>
              <div class="metric-label">Years Learning</div>
            </div>
            <div class="metric">
              <div class="metric-value" id="github-stars">---</div>
              <div class="metric-label">GitHub Stars</div>
            </div>
            <div class="metric">
              <div class="metric-value" id="total-stars">---</div>
              <div class="metric-label">Total Stars</div>
            </div>
            <div class="metric">
              <div class="metric-value" id="total-repos">---</div>
              <div class="metric-label">Repositories</div>
            </div>
          </div>

          <TerminalHero />
        </div>
      </section>

      <!-- Featured Projects from GitHub -->
      <section class="section" style="background: var(--color-surface);">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">Featured Projects</h2>
            <a href="https://github.com/suttonwilliamd?tab=repositories" class="btn btn-ghost" target="_blank" rel="noopener">View All ‚Üí</a>
          </div>

          <div class="grid grid-2" id="featured-projects">
            <div class="loading-placeholder">Loading projects from GitHub...</div>
          </div>
        </div>
      </section>
    </main>

    <Footer />

    <script>
      const GITHUB_USERNAME = 'suttonwilliamd';

      async function fetchGitHubStats() {
        try {
          const reposRes = await fetch(`https://api.github.com/users/${GITHUB_USERNAME}/repos?sort=updated&per_page=100`);
          const repos = await reposRes.json();

          if (Array.isArray(repos)) {
            const totalStars = repos.reduce((acc, repo) => acc + (repo.stargazers_count || 0), 0);
            const topRepos = repos.sort((a, b) => b.stargazers_count - a.stargazers_count).slice(0, 4);

            document.getElementById('total-stars').textContent = totalStars.toLocaleString();
            document.getElementById('total-repos').textContent = repos.length;

            const maxStars = Math.max(...topRepos.map(r => r.stargazers_count), 1);
            document.getElementById('github-stars').textContent = topRepos[0]?.stargazers_count.toLocaleString() || '0';

            const projectsContainer = document.getElementById('featured-projects');
            if (projectsContainer && topRepos.length > 0) {
              projectsContainer.innerHTML = topRepos.map(repo => `
                <article class="project-card">
                  <div class="project-header">
                    <div style="display: flex; gap: var(--space-2);">
                      <div class="terminal-dot red"></div>
                      <div class="terminal-dot yellow"></div>
                      <div class="terminal-dot green"></div>
                    </div>
                    <span class="project-title">${repo.name}</span>
                  </div>
                  <div class="project-body">
                    <h3 class="card-title">${repo.description || 'No description available'}</h3>
                    <div class="project-tags">
                      ${repo.language ? `<span class="tag">${repo.language}</span>` : ''}
                      <span class="tag">‚≠ê ${repo.stargazers_count}</span>
                      <span class="tag">üç¥ ${repo.forks_count}</span>
                    </div>
                  </div>
                  <div class="project-footer">
                    <a href="${repo.html_url}" class="btn btn-primary" target="_blank" rel="noopener">View Project</a>
                    ${repo.homepage ? `<a href="${repo.homepage}" class="btn btn-secondary" target="_blank" rel="noopener">Live Demo</a>` : ''}
                  </div>
                </article>
              `).join('');
            }
          }
        } catch (error) {
          console.error('Error fetching GitHub stats:', error);
          document.getElementById('github-stars').textContent = 'N/A';
          document.getElementById('total-stars').textContent = 'N/A';
          document.getElementById('total-repos').textContent = 'N/A';
        }
      }

      fetchGitHubStats();
    </script>
  </body>
</html>
