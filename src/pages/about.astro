---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "About | William Sutton - Hobbyist Developer";
const pageDescription = "Learn about William Sutton, a hobbyist developer on a continuous learning journey.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <header class="header">
      <div class="header-inner">
        <Navigation />
      </div>
    </header>

    <main id="main-content">
      <section class="section">
        <div class="container" style="max-width: 800px;">
          <h1 class="hero-title" style="font-size: var(--font-size-4xl);">About Me</h1>
          <p class="hero-subtitle" style="margin-bottom: var(--space-8);">
            I'm a hobbyist developer on a continuous learning journey.
          </p>

          <div class="card" style="margin-bottom: var(--space-8);">
            <h2 class="card-title" style="color: var(--color-primary);">My Story</h2>
            <p class="text-muted">
              I'm a self-taught developer with over 10 years of coding experience. I started my journey out of curiosity and have been passionate about clean code and best practices ever since.
              When I'm not coding, I enjoy contributing to open source projects and learning new technologies.
            </p>
          </div>

          <h2 class="section-title">My Learning Journey</h2>
          <div class="grid grid-2" style="gap: var(--space-4); margin-bottom: var(--space-12);">
            <div class="card">
              <h4 class="card-title" style="color: var(--color-primary);">Languages</h4>
              <p class="text-muted" style="font-size: var(--font-size-sm);">
                JavaScript, TypeScript, Python, HTML/CSS
              </p>
            </div>
            <div class="card">
              <h4 class="card-title" style="color: var(--color-secondary);">Frameworks</h4>
              <p class="text-muted" style="font-size: var(--font-size-sm);">
                React, Astro, Node.js
              </p>
            </div>
            <div class="card">
              <h4 class="card-title" style="color: var(--color-accent);">Tools</h4>
              <p class="text-muted" style="font-size: var(--font-size-sm);">
                Git, VS Code, Docker
              </p>
            </div>
            <div class="card">
              <h4 class="card-title">Interests</h4>
              <p class="text-muted" style="font-size: var(--font-size-sm);">
                Clean Code, Performance, Accessibility
              </p>
            </div>
          </div>

          <h2 class="section-title">Timeline</h2>
          <div class="card" style="margin-bottom: var(--space-8);">
            <div style="display: flex; flex-direction: column; gap: var(--space-6);">
              <div class="timeline-item">
                <div class="text-tertiary text-sm" style="margin-bottom: var(--space-1);">2014 - Present</div>
                <h4 class="card-title" style="color: var(--color-primary);">Self-Taught Developer</h4>
                <p class="text-muted" style="font-size: var(--font-size-sm);">Learning and building projects with modern web technologies</p>
              </div>
              <div class="timeline-item">
                <div class="text-tertiary text-sm" style="margin-bottom: var(--space-1);">2012 - 2014</div>
                <h4 class="card-title" style="color: var(--color-secondary);">First Steps</h4>
                <p class="text-muted" style="font-size: var(--font-size-sm);">Started with HTML, CSS, and JavaScript basics</p>
              </div>
            </div>
          </div>

          <h2 class="section-title">Get in Touch</h2>
          <div class="card">
            <p class="text-muted" style="margin-bottom: var(--space-6);">
              I'm always happy to connect with fellow developers, discuss projects, or collaborate on open source.
            </p>
            <div style="display: flex; gap: var(--space-4); flex-wrap: wrap;">
              <a href="mailto:suttonwilliamd@gmail.com" class="btn btn-primary">Email Me</a>
              <a href="https://github.com/suttonwilliamd" class="btn btn-secondary">GitHub</a>
              <a href="https://linkedin.com/in/suttonwilliamd" class="btn btn-secondary">LinkedIn</a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  .timeline-item {
    padding-left: var(--space-4);
    border-left: 2px solid var(--color-border);
  }

  .timeline-item:first-child {
    border-left-color: var(--color-primary);
  }

  .timeline-item:nth-child(2) {
    border-left-color: var(--color-secondary);
  }

  .timeline-item:nth-child(3) {
    border-left-color: var(--color-accent);
  }
</style>
